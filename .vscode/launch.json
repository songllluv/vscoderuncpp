{
    // 使用 Dev-Cpp 内置编译器进行调试的 VS Code 配置
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Dev-Cpp 编译并调试",
            "type": "cppdbg",
            "request": "launch",
            "program": "C:\\Windows\\system32\\cmd.exe",
            "args": [
                "/C",
                "${fileDirname}\\${fileBasenameNoExtension}.exe & echo. & echo ------------------------ & echo Process exited with return value %ERRORLEVEL% & pause"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "D:/Program Files (x86)/Dev-Cpp/MinGW64/bin/gdb.exe", // Dev-Cpp 的 gdb 路径
            "setupCommands": [
                {
                    "description": "为调试器启用漂亮打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}